      "steps": [
        "Step 1: Enter invalid username or email address.",
        "Step 2: Enter invalid password.",
        "Step 3: Click the 'Sign in' button."
      ],
      "expected_results": [
        "Expected Result 1: An error message is displayed indicating invalid credentials."
      ],
      "elements": [
        {
          "step": "Step 1",
          "description": "Username/Email input field",
          "type": "input",
          "selectors": {
            "id": "login_field",
            "css": "#login_field",
            "xpath": "//input[@id='login_field']"
          }
        },
        {
          "step": "Step 2",
          "description": "Password input field",
          "type": "input",
          "selectors": {
            "id": "password",
            "css": "#password",
            "xpath": "//input[@id='password']"
          }
        },
        {
          "step": "Step 3",
          "description": "Sign in button",
          "type": "submit",
          "selectors": {
            "css": ".js-sign-in-button",
            "xpath": "//input[@value='Sign in']"
          }
        }
      ],
      "test_data": [
        {
          "email": "invaliduser",
          "password": "wrongpassword"
        },
        {
          "email": "nonexistent@example.com",
          "password": "incorrect"
        }
      ]
    },
    {
      "id": "TC003",
      "name": "Forgot Password",
      "description": "Verify the 'Forgot password?' link functionality.",
      "steps": [
        "Step 1: Click the 'Forgot password?' link."
      ],
      "expected_results": [
        "Expected Result 1: User is redirected to the password reset page."
      ],
      "elements": [
        {
          "step": "Step 1",
          "description": "Forgot password link",
          "type": "link",
          "selectors": {
            "id": "forgot-password",
